<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="hpMember">

	<insert id="enrollMember" parameterType="hpMember">
		INSERT INTO HOSPITAL_MEMBER VALUES(SEQ_HOSPITAL_NO.NEXTVAL, #{id}, #{password}, #{hospitalName}, #{hospNo}, #{managerName}, #{email}, #{tel}, default)
	</insert>
	
	<select id="loginMember" parameterType="hpMember" resultType="hpMember">
		SELECT * FROM HOSPITAL_MEMBER WHERE ID = #{id}
	</select>
	
	<select id="HpMemberList" resultType="hpMember">
		SELECT * FROM HOSPITAL_MEMBER
	</select>	
	
	
</mapper>
