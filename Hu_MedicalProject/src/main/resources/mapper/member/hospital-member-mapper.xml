<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="hospital">

	<resultMap type="hospital" id="hospitalVO">
		<result property="hospitalName" column="HOSPITAL_NAME"/>
		<result property="hospitalNo" column="HOSPITAL_NO"/>
		<result property="managerName" column="MANAGER_NAME"/>
	</resultMap>
	
	<insert id="enrollMember" parameterType="hospital">
		INSERT INTO HOSPITAL_MEMBER VALUES(SEQ_HOSPITAL_NO.NEXTVAL, #{id}, #{password}, #{hospitalName}, #{hospitalNo}, #{managerName}, #{email}, #{tel}, default)
	</insert>
	
	<select id="loginMember" parameterType="hospital" resultMap="hospitalVO">
		SELECT * FROM HOSPITAL_MEMBER WHERE ID = #{id}
	</select>
	
	<select id="HpMemberList" resultType="hospital">
		SELECT * FROM HOSPITAL_MEMBER
	</select>	
	
	
</mapper>
